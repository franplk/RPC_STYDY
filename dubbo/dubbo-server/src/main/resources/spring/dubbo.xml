<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="dubbo-server" />

	<!-- 使用multicast广播注册中心暴露服务地址:224.0.0.0至239.255.255.255 -->
	<dubbo:registry address="multicast://224.10.10.10:20880" />

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="cn.plk.rpc.api.HelloAPI" ref="demoService" />

	<!-- 和本地bean一样实现服务 -->
	<bean id="demoService" class="cn.plk.dubbo.DubboService" />

</beans>